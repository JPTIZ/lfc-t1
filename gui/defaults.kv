<VSeparator@Widget>:
    size_hint_x: None
    thickness: 1
    margin: 2
    width: self.thickness + 2 * self.margin
    canvas:
        Color:
            rgb: .3, .3, .3
        Rectangle:
            pos: self.x + self.margin, self.y + self.margin + 1
            size: self.thickness, self.height + 2 * self.margin

<Button>:
    height: 30
    font_size: 14
    size_hint: None, None

<Panel@Widget>:
    canvas:
        Color:
            rgb: (.4, .4, .4)
        Rectangle:
            size: self.size
            pos: self.pos

<Table@BoxLayout>:#GridLayout>:
    cols: 2
    cell_width: 100
    cell_height: 32
    orientation: 'vertical'

<TableRow@BoxLayout>:


<TableHeader@Label>:
    bold: True
    width: 64
    font_name: 'font.ttf'
    canvas.before:
        Color:
            rgb: (.3, .3, .3)
        Rectangle:
            size: self.size
            pos: self.pos
        Color:
            rgb: (.4, .4, .4)
        Rectangle:
            size: self.size[0] - 1, self.size[1] - 2
            pos: self.pos[0] + 1, self.pos[1] + 1

<TableCell@TextInput>:
    color: 0, 0, 0, 1
    width: 64
    editable: True
    multipline: False
    focus: True
    font_name: 'font.ttf'
    canvas.before:
        Color:
            rgb: (0, 0, 0)
        Rectangle:
            size: self.size
            pos: self.pos
        Color:
            rgb: (1, 1, 1)
        Rectangle:
            size: self.size[0] - 1, self.size[1] - 1
            pos: self.pos[0] + 1, self.pos[1] + 1


<FLTabbedPanel@TabbedPanel>:
    tab_height: 28
    do_default_tab: False
    canvas.before:
        Color:
            rgb: (.4, .4, .4, 1)
        Rectangle:
            size: self.size
            pos: self.pos
        Color:
            rgb: (.3, .3, .3, 1.)
        Line:
            points: self.x, self.top, self.right, self.top
            width: 1


<AutomataTab@TabbedPanelItem>:
    text: 'Automata1'
    FLTabbedPanel:
        id: tabs
        TabbedPanelItem:
            id: transition_tab
            text: 'Transitions'
            ScrollView:
                effect_cls: ScrollEffect
                Table:
                    id: transition_table
                    size_hint: None, None
                    width: len(self.children[0].children) * 48 if len(self.children) > 0 else 0
                    height: len(self.children) * 48
                    TableRow:
                        id: transition_header
                        TableHeader:
                            text: 'q'
                        TableHeader:
                            text: 'a'
                        TableHeader:
                            text: 'b'
                    BoxLayout:
                        TableCell:
                            text: 'â†’S'
                        TableCell:
                            text: '-'
                        TableCell:
                            text: '-'
        TabbedPanelItem:
            id: automata_view
            text: 'Automata'
            Image:
                canvas.before:
                    Color:
                        rgb: (1, 1, 1)
                    Rectangle:
                        pos: self.pos
                        size: self.size
                id: automata_image
                size_hint: 1, 1
                source: ''

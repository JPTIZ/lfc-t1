#:import ScrollEffect kivy.effects.scroll.ScrollEffect
<MainWindow>:
    BoxLayout:
        orientation: 'vertical'
        size: root.size
        Panel:
            id: menu_bar
            size: root.size[0], 40
            size_hint: None, None
            StackLayout:
                top: menu_bar.top - 5
                size: self.parent.size
                size_hint: None, None
                Button:
                    id: btn_new
                    text: 'New'
                    on_press: root.new_automata()
                Button:
                    id: btn_load
                    text: 'Load'
                    on_press: root.load_file()
                Button:
                    id: btn_save
                    text: 'Save'
                    on_press: root.save_file()
                    disabled: True
                VSeparator
                Button:
                    id: btn_add_symbol
                    text: 'Add symbol'
                    on_press: root.show_input_dialog('Add symbol', root.add_symbol)
                    disabled: True
                Button:
                    id: btn_add_state
                    text: 'Add state'
                    on_press: root.add_state()
                    disabled: True
                Button:
                    id: btn_clear
                    text: 'Clear'
                    on_press: root.show_clear_popup()
                    disabled: True
                Button:
                    id: btn_close
                    text: 'Close'
                    disabled: True
                    on_press: root.close_current()
        FLTabbedPanel:
            id: automata_tabs
